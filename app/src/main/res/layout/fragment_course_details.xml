<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".CourseDetailsFrag"
                                             android:id="@+id/course_detail_frameLayout">
    <TextView
            android:text="Course Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_detail_name_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"/>
    <TextView
            android:text="Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/course_detail_address_text_view"
            app:layout_constraintStart_toStartOf="@+id/course_detail_name_text_view"
            app:layout_constraintEnd_toEndOf="@+id/course_detail_name_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/course_detail_name_text_view" android:textStyle="italic"
            android:textSize="12sp"/>
    <TextView
            android:text="Phone Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/course_detail_phone_no_text_view"
            app:layout_constraintStart_toStartOf="@+id/course_detail_address_text_view"
            app:layout_constraintEnd_toEndOf="@+id/course_detail_address_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/course_detail_address_text_view" android:textAlignment="center"
            android:textSize="18sp"/>
    <Button
            android:text="Select Course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>